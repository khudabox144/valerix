# ===========================================
#  Valerix Platform — Environment Variables
# ===========================================
# Copy this file to .env and fill in values.
# docker-compose.yml reads these automatically.

# ── PostgreSQL ──────────────────────────────
POSTGRES_USER=valerix
POSTGRES_PASSWORD=valerix123
POSTGRES_DB=postgres

# ── Order Service ───────────────────────────
ORDER_SERVICE_PORT=3001
ORDER_DB_NAME=order_db

# ── Inventory Service ───────────────────────
INVENTORY_SERVICE_PORT=3002
INVENTORY_DB_NAME=inventory_db

# ── Redis ───────────────────────────────────
REDIS_PORT=6379

# ── Frontend ────────────────────────────────
NEXT_PUBLIC_ORDER_API_URL=http://localhost:3001
NEXT_PUBLIC_INVENTORY_API_URL=http://localhost:3002

# ── Grafana ─────────────────────────────────
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin123
